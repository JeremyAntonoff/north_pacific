<% blogs.forEach(function(blog) { %>
<div class = "container" id = "blog-form">
  <div id = "blog-head-index">
    <h1> <%=blog.title%></h1>
  </div>
    <img id="blogImg" class= "img-responsive"  src="/imgs/uploads/<%=blog.image%>">
