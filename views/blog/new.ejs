<% include ../partials/header.ejs %>
<script src="https://cdn.ckeditor.com/4.7.2/standard/ckeditor.js"></script>
<div class ="margin"></div>
<section class = "container" id = "blog-form">
  <div id = "blog-head">
    <h1> NEW BLOG POST </h1>
  </div>
    <div class = "col-lg-12">
      <form action="/blog" enctype="multipart/form-data" method="POST">
        <div class="form-group">
          <label for="title">BLOG TITLE</label>
          <input type="text" class="form-control" name="blog[title]"  placeholder="Enter a Title">
        </div>
        <div class="form-group">
          <label for="image">UPLOAD IMAGE</label>
          <input type="file" class="form-control" name="image" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label for="title">BLOG TITLE</label>
          <textarea id="blog-body" class="form-control" name="blog[body]"  placeholder="Enter a Title"></textarea>
          <script>CKEDITOR.replace('blog[body]')</script>


        </div>
        <button id="buttonsubmit" type="submit" class="btn btn-primary btn-block">Submit</button>
      </form>
    </div>
</section>
